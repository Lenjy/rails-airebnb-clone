<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "background_shoes.png" %>'); height: 400px;">
  <div class="container d-flex align-items-center">
    <div>
      <h1>Shoes qui peut. <strong>Rent your shoes before buying them.</h1>
      <p>Which shoes will you wear today ?</p>
      <div class="d-flex align-items-center" style="color: white;">        
        <%= form_tag shoes_path, method: :get, class:"form-inline" do %>
          <%= text_field_tag :query,
          params[:query],
          class: "form-control mr-3",
          placeholder: "Brand, description..."
          %>
          <%= text_field_tag :shoe_size,
          params[:shoe_size],
          class: "form-control mr-3",
          placeholder: "Your size"
          %>
          <%= submit_tag "Search", class: "btn btn-flat", style: "height: 38px"%>
        <% end %>
        <%# end %>
        <%# <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-success my-2 my-sm-0" type="submit">Search</button>
        </form> %>
      </div>
    </div>
    <%= image_tag("nikeshoe.png", alt: "nike shoe", size: "300") %>
  </div>
</div>

<div class="container">


  <div class="cards">
    <% @shoes.each do |shoe| %>
      <div class="card-category">
        <div class="row">
          <div class="d-flex justify-content-between">
            <div class="col-4">
              <%= cl_image_tag shoe.photo.key, height: 180, width: 180, crop: :fill %>
              <div class="card-category-price">
                <h1 class="ml-2" style="color: rgb(28, 221, 135);"><%= shoe.daily_pricing %></h1>
                <i class="fas fa-euro-sign"></i>
                <span style="font-size: 12px; opacity: 0.6; margin-left: 4px;">per day</span>
              </div>
            </div>

            <div class="col-8">
              <h2><%= shoe.title %></h2>
              <p><%= shoe.description %></p>
              <hr>
              <div class="d-flex">
                <div class="card-category-specs">
                  <div class="d-flex align-items-center">
                    <i class="fas fa-tags"></i>
                    <p class="ml-1"><%= shoe.brand %></p>
                  </div>
                  <div class="d-flex align-items-center">
                    <i class="fas fa-shoe-prints"></i>
                    <p class="ml-1"><%= shoe.model %></p>
                  </div>
                </div>
                <div class="card-category-specs ml-2">
                  <div class="d-flex align-items-center">
                    <i class="fas fa-palette"></i>
                    <p class="ml-1"><%= shoe.color %></p>
                  </div>
                  <div class="d-flex align-items-center">
                    <i class="fas fa-venus-mars"></i>
                    <p class="ml-1"><%= shoe.gender %></p>
                  </div>
                </div>
              </div>
              <%= link_to "Rent these shoes !", shoe_path(shoe), class: "btn btn-link", style: "margin-top: 20px; padding: 0px;"%>
            </div>

          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>



